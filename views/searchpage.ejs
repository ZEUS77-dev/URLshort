<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="searchstyles.css">
    <title>Search</title>
</head>
    <%- include('./partials/nav.ejs') %>
<body>

      <div class="login-box">
        <form method="POST" action="/search">
            <div class="user-box fw-semibold">
              <input type="text" name="input"  autocomplete="off" required>
              <label>Enter your keyword</label>
            </div>
            <button type="submit" class="btn btn-light">
                Search
              </button>
          </form>
          
      </div>

    <% if (locals.packet) { %>
        <table class="table table-sm table-dark">
            <thead>
                <th>S.No</th>
                <th>shortid</th>
                <th>redirectURL</th>
                <th>note</th>
                <th>clicks</th>
            </thead>
            <tbody>
                <% packet.forEach((packet,index) => { %>
                 <tr>
                    <td><%= index+1 %></td>
                    <td><%= packet.shortid %></td>
                    <td><%= packet.redirectURL %></td>
                    <td><%= packet.note %></td>
                    <td><%= packet.visitedHistory.length %></td>
                 </tr>
                <% }); %>
            </tbody>
        </table>
        <% } %>
</body>
</html>